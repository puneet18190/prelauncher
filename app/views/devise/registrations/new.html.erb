
<div class="header" style="width: 100%;margin:0 auto;background:url('/assets/NoInviteDayParty.jpg') no-repeat top center;background-size:100% 100%;position:absolute;height: 100%;margin-top: -22px">
  <div id="login" class="row">
    <div style="margin-top:15%;margin-bottom:15%;margin-left:50%;background-color: #F0F0F0;opacity: 0.8" class="four columns centered form-general">
      <h1>Log In</h1>
      <h3>We'll take you right back to the story.</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html=>{:style=> ""}) do |f| %>
  <%= devise_error_messages! %>

  <div><%#= f.label :email %><br />
  <%= f.email_field :email, autofocus: true,:value=>params[:email],:style=>"opacity:0.8;height:30px",:placeholder=>"Email" %></div>

  <div><%#= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off",:style=>"opacity:0.8;height:30px",:placeholder=>"Password" %></div>

  <div><%#= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:style=>"opacity:0.8;height:30px",:placeholder=>"Password Confirmation" %></div>

          <div><%= f.submit "", :class=> "bt-login" %></div>
<% end %>

<%#= render "devise/shared/links" %>

</div>
  </div>
</div>
